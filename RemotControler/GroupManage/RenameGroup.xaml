<Window x:Class="RemotControler.GroupManage.RenameGroup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="RenameGroup" Height="160" Width="200">
    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"></Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,5,0,0" VerticalAlignment="Top" 
                   TextWrapping="Wrap" Text="选择群组" />
        <ComboBox Name="cbxGroup" HorizontalAlignment="Left" VerticalAlignment="Top"
                                 Width="172" Margin="10,23,0,0" Height="22" ItemsSource="{Binding}"></ComboBox>
        <TextBlock HorizontalAlignment="Left" Height="18" Margin="10,50,0,0" VerticalAlignment="Top" 
                   TextWrapping="Wrap" Text="名称" />
        <TextBox Name="txtName" HorizontalAlignment="Left" VerticalAlignment="Top"
                                 Width="172" Margin="10,68,0,0" Height="22"></TextBox>
        <Button Content="修改" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="74" Margin="0,0,0,10"
                Name="btnConfirm" Click="btnConfirm_Click_1"></Button>
    </Grid>
</Window>
